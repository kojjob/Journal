<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% content_for :title, "Journals" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-extrabold text-gray-900">Journals</h1>
    <%= link_to new_journal_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      New Journal
    <% end %>
  </div>

  <div id="journals" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <% @journals.each do |journal| %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 truncate"><%= journal.title %></h3>
          <p class="mt-1 text-sm text-gray-500">By <%= journal.author %></p>
          <p class="mt-1 text-sm text-gray-500"><%= journal.published_at.strftime("%B %d, %Y") %></p>
          <div class="mt-4">
            <%= link_to journal, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              View Details
              <svg class="ml-2 -mr-0.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>