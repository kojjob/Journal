                  <%= link_to "About", "#", class: "text-base text-gray-300 hover:text-white" %>
                </li>
                <li>
                  <%= link_to "Blog", "#", class: "text-base text-gray-300 hover:text-white" %>
                </li>
                <li>
                  <%= link_to "Jobs", "#", class: "text-base text-gray-300 hover:text-white" %>
